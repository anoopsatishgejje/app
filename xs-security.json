{
    "xsappname": "app",
    "tenant-mode": "dedicated",
    "scopes": [
        {
            "name": "uaa.user",
            "description": "UAA"
        }
        ,
        {
            "name": "app.Viewer",
            "granted-apps": ["app(application,)"],
            "description": "Viewer"
        },
        {
            "name": "app.Admin",
            "description": "Administrator"
        }
    ],
    "role-templates": [
        {
            "name": "Token_Exchange",
            "description": "UAA Token Exchange",
            "scope-references": [
                "uaa.user"
            ]
        }
        ,
        {
            "name": "Viewer",
            "description": "Viewer",
            "scope-references": [
                "app.Viewer"
            ]
        },
        {
            "name": "Admin",
            "description": "Administrator",
            "scope-references": [
                "app.Admin"
            ]
        }
    ]
    ,
    "role-collections": [
        {
            "name": "app_Viewer",
            "description": "Viewing access",
            "role-template-references": [
                "app.Viewer"
            ]
        },
        {
            "name": "app_Administrator",
            "description": "Administrative access",
            "role-template-references": [
                "$app.Admin"
            ]
        }
    ]
    ,
    "oauth2-configuration": {
        "token-validity": 3600,
        "redirect-uris": [
            "https://*-app-app.cfapps.*.hana.ondemand.com/login/callback"
        ]
    }
}